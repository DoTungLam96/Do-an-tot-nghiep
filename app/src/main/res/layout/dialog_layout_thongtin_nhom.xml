<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="5dp"
    android:layout_width="350dp" android:layout_height="match_parent">
    <TextView
    android:id="@+id/abc"
    android:textStyle="bold"
    android:textColor="#af1919"
    android:textSize="20sp"
    android:gravity="center"
    android:text="Thông tin các thành viên nhóm"
    android:layout_width="match_parent"
    android:layout_height="40dp" />
    <TextView
        android:background="@drawable/duongagch"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:dividerHeight="1.5dp"
        android:divider="#e7f9f6f6"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/listViewTTNhom"
        android:layout_marginTop="10dp"
        android:layout_below="@id/abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>