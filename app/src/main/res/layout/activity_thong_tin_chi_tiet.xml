<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.appquanlyquanhecanhan.ThongTinChiTietActivity">
    <android.support.v7.widget.Toolbar
    app:titleTextColor="#FFF"
    app:title="Chi tiết"
    android:background="#255176"
    android:id="@+id/toolBarThongTin"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"></android.support.v7.widget.Toolbar>

<LinearLayout
    android:weightSum="10"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgHinhChiTiet"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="170dp" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/btnFBB"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_facebook" />
            <ImageButton
                android:id="@+id/btnGmaill"
                android:layout_marginLeft="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_gmail"
                android:background="@null"
                android:layout_width="17dp"
                android:layout_height="17dp" />
            <ImageButton
                android:id="@+id/btnTinNhann"
                android:layout_marginLeft="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/sms"
                android:background="@null"
                android:layout_width="17dp"
                android:layout_height="17dp" />

            <ImageButton
                android:layout_marginRight="20dp"
                android:id="@+id/btnGoiDienn"
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/p" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<TextView
    android:layout_gravity="center"
    android:id="@+id/txtChiTietHoTen"
    android:textStyle="bold"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="10dp"
    android:textColor="#ba2851"
    android:gravity="center"
    android:textSize="18sp"
    android:text="Đỗ Tùng Lâm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/rowDown_a"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/arrow"
                android:background="@null"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <ImageButton
                android:id="@+id/rowDown_b"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/arrow"
                android:background="@null"
                android:layout_width="12dp"
                android:layout_height="12dp" />
        </LinearLayout>
<ScrollView
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ve_duong_gach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/colortext"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Thông Tin Chi Tiết"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colortext"
                    android:id="@+id/txtChiTietSDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="SĐT"
                    android:textSize="10sp" />
     <TextView
         android:textColor="@color/colortext"
         android:id="@+id/txtChiTetDiaChi"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="15dp"
         android:textSize="10sp"
         android:text="Địa chỉ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colortext"
                    android:id="@+id/txtChiTietEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Email"
                    android:textSize="10sp" />
            <TextView

                android:textColor="@color/colortext"
                android:id="@+id/txtChiTietFB"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="10sp"
                android:text="Facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:textColor="@color/colortext"
                android:id="@+id/txtChiTietNS"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="10sp"
                android:text="Ngày sinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ve_duong_gach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
</ScrollView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

       <ImageButton
           android:id="@+id/btnThemGroup"
           android:layout_marginLeft="45dp"
           android:layout_marginBottom="10dp"
           android:layout_alignParentBottom="true"
           android:scaleType="fitXY"
           android:background="@null"
           android:src="@drawable/groupa"
           android:layout_width="17dp"
           android:layout_height="17dp" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtThemGroup"
                    android:textColor="#255176"
                    android:textStyle="italic"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"
                    android:text="Thêm vào group"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/btnThemGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:textColor="@color/colortext"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Lịch sử nhắn tin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/duonggach"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold|italic"
                    android:textSize="15sp"
                    android:textColor="#c7ac47"
                    android:id="@+id/txtSDTT"
                    android:gravity="center"
                    android:text="SĐT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ListView
                    android:id="@+id/listViewTinNhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"></ListView>
                <TextView
                    android:background="@drawable/duonggach"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold|italic"
                    android:textSize="15sp"
                    android:textColor="#c7ac47"
                    android:gravity="center"
                    android:text="Đã gửi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:background="@drawable/duonggach"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ListView
                android:id="@+id/listViewTinNhanNhan"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        </ScrollView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/colortext"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Lịch sử liên hệ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:background="@drawable/duonggach"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/listViewCuocGoi"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
